<h2>Portfolios:</h2>

{{#each portfolios}}
 <section>
        <p>
            Title: {{this.title}}<br />

            Coins: 
            {{#each this.coin}}
            {{ticker}} 
            {{/each}}
            <br />
            Amount: {{this.amount}} <br />

            Total Value: {{this.value}}
            <br />
            <a href="/portfolio/{{id}}">More details</a>
            <a href="/portfolio/{{_id}}/edit">Edit this portfolio</a>
        </p>

    </section>
{{/each}}